# ============================================
# LeadScout Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values
# DO NOT commit .env.local to version control!
# ============================================

# ============================================
# CONVEX (Database & Backend)
# ============================================
CONVEX_DEPLOYMENT=
NEXT_PUBLIC_CONVEX_URL=
EXPO_PUBLIC_CONVEX_URL=

# ============================================
# CLERK (Authentication)
# ============================================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=
CLERK_WEBHOOK_SECRET=
EXPO_PUBLIC_CLERK_PUBLISHABLE_KEY=

# ============================================
# STRIPE (Payments & Payouts)
# ============================================
STRIPE_SECRET_KEY=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_CONNECT_CLIENT_ID=

# Subscription Plan Price IDs (from Stripe Dashboard)
NEXT_PUBLIC_STRIPE_STARTER_PRICE_ID=
NEXT_PUBLIC_STRIPE_GROWTH_PRICE_ID=
NEXT_PUBLIC_STRIPE_SCALE_PRICE_ID=
STRIPE_CREDIT_PRICE_ID=

# ============================================
# RESEND (Email)
# ============================================
RESEND_API_KEY=
RESEND_FROM_EMAIL=noreply@leadscout.com

# ============================================
# EXPO (Mobile Push Notifications)
# ============================================
EXPO_PUSH_TOKEN_SECRET=

# ============================================
# LEAD PRICING (in euros)
# ============================================
# How much companies pay per lead by category
LEAD_PRICE_IT=30
LEAD_PRICE_MARKETING=25
LEAD_PRICE_HR=20
LEAD_PRICE_SALES=25
LEAD_PRICE_CONSULTING=25
LEAD_PRICE_FINANCE=25
LEAD_PRICE_DEFAULT=25

# ============================================
# PAYOUT CONFIGURATION
# ============================================
# Minimum euros scout must have pending to receive payout
PAYOUT_MINIMUM_THRESHOLD=20

# Commission rate: 0.5 = 50% to platform, 50% to scout
PLATFORM_COMMISSION_RATE=0.5

# Payout schedule: Day (0=Sunday, 5=Friday) and Hour (UTC)
PAYOUT_SCHEDULE_DAY=5
PAYOUT_SCHEDULE_HOUR=9

# ============================================
# CREDIT CONFIGURATION
# ============================================
# Price per credit for one-time purchases (in euros)
CREDIT_TOP_UP_PRICE=5

# How many months credits remain valid
CREDIT_EXPIRATION_MONTHS=3

# Notify company when credits drop below this number
LOW_CREDIT_THRESHOLD=5

# ============================================
# SUBSCRIPTION PLANS
# ============================================
# Monthly credit allocation by plan
STARTER_PLAN_CREDITS=20
GROWTH_PLAN_CREDITS=60
SCALE_PLAN_CREDITS=150

# ============================================
# QUALITY SCORING
# ============================================
# Minimum description length for quality assessment
QUALITY_MIN_DESCRIPTION_LENGTH=100

# Quality score calculation weights (must sum to 1.0)
QUALITY_SCORE_SOLD_WEIGHT=0.4
QUALITY_SCORE_APPROVAL_WEIGHT=0.3
QUALITY_SCORE_FEEDBACK_WEIGHT=0.3

# ============================================
# BADGE THRESHOLDS
# ============================================
# Number of leads sold to reach each badge level
BADGE_SILVER_THRESHOLD=20
BADGE_GOLD_THRESHOLD=50
BADGE_PLATINUM_THRESHOLD=100

# ============================================
# FEATURE FLAGS
# ============================================
# Enable/disable features without code changes
FEATURE_ANALYTICS_ENABLED=true
FEATURE_API_ACCESS_ENABLED=true
FEATURE_REFERRAL_PROGRAM_ENABLED=false

# ============================================
# ADMIN CONFIGURATION
# ============================================
# Comma-separated list of admin emails
ADMIN_EMAIL_WHITELIST=admin@leadscout.com,support@leadscout.com

# ============================================
# APPLICATION SETTINGS
# ============================================
NEXT_PUBLIC_APP_NAME=LeadScout
NEXT_PUBLIC_APP_URL=https://leadscout.com
NEXT_PUBLIC_WEB_URL=https://leadscout.com
NEXT_PUBLIC_MOBILE_SCHEME=leadscout://

# ============================================
# FUTURE: MONITORING & ANALYTICS
# ============================================
# Uncomment and configure when ready
# SENTRY_DSN=
# GOOGLE_ANALYTICS_ID=
# MIXPANEL_TOKEN=

# ============================================
# NOTES
# ============================================
# 1. Never commit .env.local to version control
# 2. All business logic values MUST use environment variables
# 3. NO hardcoded values in code (prices, thresholds, rates)
# 4. For Digital Ocean deployment, set these as app-wide variables
# 5. Stripe price IDs come from your Stripe Dashboard after creating products
# ============================================
